<div id="photos">
  <h2>Photos in <%= h(@gallery.title) %> Gallery</h2>
    <% unless @gallery.description.nil? %>
    <div class="gallery-description">
      <%- unless @gallery.description.blank? -%>
      <p><strong>Description:</strong> <%= @gallery.description %></p>
      <%- end -%>
    </div>
    <% end %>
  
    <p>
      <% if gallery_editable? @gallery %>
        <%= link_to "Add photo", new_photo_path_handle_artist(@gallery) %> |
        <%= link_to "Edit gallery", edit_gallery_path_handle_artist(@gallery) %> |
      <% end %>
      <%= link_to "All galleries", all_galleries_path(@gallery) %>
    </p>
  
    <%- if @photos.empty? -%>
    <h3>No photos (yet) </h3>
    <%- else -%>
      <ul>
        <%= render :partial=>"shared/photo", :collection => @photos %>
      </ul>
      <%= will_paginate(@photos) %>
    <%- end -%>
</div>