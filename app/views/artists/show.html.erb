<h1><%= @artist.name %></h1>

<div class="artist-bio">
  <%= @artist.bio %>
</div>

<div id="artist-members-list">
  <% if @artist.members %>
      <div id="members-title">Members (<span class="artist-member-count"><%= @artist.members.size %></span>):</div>
      <ul>
        <% @artist.members.each do |member| %>
            <li><%= link_to member.name, member %></li>
        <% end %>
      </ul>
  <% end %>
</div>

<div id="artist-fans-list">
  <% if @artist.fans %>
      <div id="fans-title">Fans (<span class="artist-fan-count"><%= @artist.fans.size %></span>):</div>
      <ul>
        <% @artist.fans.each do |fan| %>
            <li><%= link_to fan.name, fan %></li>
        <% end %>
      </ul>
  <% end %>
</div>

